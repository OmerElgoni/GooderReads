{
  "development": {
    "URI": "sqlite::memory:",
    "define": {
      "freezeTableName": true
    }
  },
  "production": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "dialectOptions": {
      "ssl": {
        "rejectUnauthorized": false
      }
    },
    "define": {
      "freezeTableName": true
    },
    "pool": {
      "max": 10,
      "min": 0,
      "idle": 15000
    }
  }
}
